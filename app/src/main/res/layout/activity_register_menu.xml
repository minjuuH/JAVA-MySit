<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_menu">


    <EditText
        android:id="@+id/txt_UserName"
        android:layout_width="240dp"
        android:layout_height="49dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/txt_PwdCheck" />

    <EditText
        android:id="@+id/txt_PhNum"
        android:layout_width="240dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="핸드폰 번호"
        android:inputType="phone"
        android:maxLength="13"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/txt_UserName"
        tools:text="010-0000-0000" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="63dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="12dp"
        android:text="PHONE"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_PhNum"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="47dp"
        android:layout_height="31dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="26dp"
        android:text="이름"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_UserName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remainView" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="413dp"
        android:layout_height="59dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="회 원 가 입"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_Id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/remainView"
        android:layout_width="47dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:text="PW"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txt_Id"
        android:layout_width="240dp"
        android:layout_height="49dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

    <EditText
        android:id="@+id/txt_Pwd"
        android:layout_width="240dp"
        android:layout_height="49dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="비밀번호(6자리이상)"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/remainView"
        app:layout_constraintTop_toBottomOf="@+id/txt_Id" />

    <EditText
        android:id="@+id/txt_PwdCheck"
        android:layout_width="240dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/remainView"
        app:layout_constraintTop_toBottomOf="@+id/txt_Pwd" />

    <Button
        android:id="@+id/register"
        android:layout_width="402dp"
        android:layout_height="76dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="24dp"
        android:text="회원가입"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="45dp"
        android:layout_height="31dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="53dp"
        android:text="ID"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />


</androidx.constraintlayout.widget.ConstraintLayout>